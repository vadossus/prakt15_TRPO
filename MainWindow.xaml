<Window x:Class="prakt15_TRPO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Магазин электроники" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource PrimaryAccent}" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="Main"
                   Text="Магазин электроники"
                   Foreground="White"
                   FontSize="18"
                   VerticalAlignment="Center"
                   Grid.Column="0"/>
                
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <TextBlock x:Name="UserRoleText"
                               Text="Режим: Посетитель"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>

                    <Button x:Name="AddProductBtn"
                            Content="Добавить товар"
                            Background="{StaticResource SecondaryAccent}"
                            Foreground="White"
                            Padding="10,5"
                            Visibility="Collapsed"
                            Click="AddProductBtn_Click"/>

                    <Button x:Name="ManageCategoriesBtn"
                            Content="Управление категориями"
                            Background="{StaticResource SecondaryAccent}"
                            Foreground="White"
                            Padding="10,5"
                            Margin="10,0,0,0"
                            Visibility="Collapsed"
                            Click="ManageCategoriesBtn_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" 
                Background="{StaticResource PrimaryBackground}"
                BorderBrush="{StaticResource PrimaryAccent}"
                BorderThickness="0,0,0,1"
                Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Magnify" 
                                             Width="24" 
                                             Height="24"
                                             Margin="0,0,5,0"
                                             VerticalAlignment="Center"/>
                    <TextBox x:Name="SearchTextBox"
                             Width="250"
                             materialDesign:HintAssist.Hint="Поиск..."
                             TextChanged="SearchTextBox_TextChanged"/>
                </StackPanel>


                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center">
                    <Label Content="Сортировка:" 
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>
                    <ComboBox x:Name="SortComboBox"
                              Width="150"
                              SelectionChanged="SortComboBox_SelectionChanged">
                        <ComboBoxItem Tag="Name" Content="По названию (А-Я)"/>
                        <ComboBoxItem Tag="NameDesc" Content="По названию (Я-А)"/>
                        <ComboBoxItem Tag="Price" Content="По цене (возр)"/>
                        <ComboBoxItem Tag="PriceDesc" Content="По цене (убыв)"/>
                        <ComboBoxItem Tag="Stock" Content="По остатку (возр)"/>
                        <ComboBoxItem Tag="StockDesc" Content="По остатку (убыв)"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="3" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button x:Name="ResetFiltersBtn"
                            Content="Сбросить фильтры"
                            Click="ResetFiltersBtn_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Background="{StaticResource PrimaryBackground}"
                    BorderBrush="{StaticResource PrimaryAccent}"
                    BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="Категория"
                                  Margin="0,0,0,10"
                                  BorderBrush="{StaticResource SecondaryAccent}">
                            <ComboBox x:Name="CategoryFilterComboBox"
                                  ItemsSource="{Binding Categories}"
                                  SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                                  DisplayMemberPath="Name"
                                  materialDesign:HintAssist.Hint="Выберите категорию"/>
                        </GroupBox>

                        <GroupBox Header="Бренд" 
                                  Margin="0,0,0,10"
                                  BorderBrush="{StaticResource SecondaryAccent}">
                            <ComboBox x:Name="BrandFilterComboBox"
                                  ItemsSource="{Binding Brands}"
                                  SelectedItem="{Binding SelectedBrand, Mode=TwoWay}"
                                  DisplayMemberPath="Name"
                                  materialDesign:HintAssist.Hint="Выберите бренд"/>
                        </GroupBox>

                        <GroupBox Header="Цена" 
                                  Margin="0,0,0,10"
                                  BorderBrush="{StaticResource SecondaryAccent}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="От:" Width="40"/>
                                    <TextBox x:Name="PriceFromTextBox"
                                             Width="80"
                                             materialDesign:HintAssist.Hint="0"
                                             PreviewTextInput="NumberTextBox_PreviewTextInput"
                                             TextChanged="PriceFilter_TextChanged"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <Label Content="До:" Width="40"/>
                                    <TextBox x:Name="PriceToTextBox"
                                             Width="80"
                                             materialDesign:HintAssist.Hint="∞"
                                             PreviewTextInput="NumberTextBox_PreviewTextInput"
                                             TextChanged="PriceFilter_TextChanged"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Остаток" 
                                  Margin="0,0,0,10"
                                  BorderBrush="{StaticResource SecondaryAccent}">
                            <CheckBox x:Name="LowStockCheckBox"
                                      Content="Мало осталось"
                                      Margin="5"
                                      Checked="LowStockCheckBox_Changed"
                                      Unchecked="LowStockCheckBox_Changed"/>
                        </GroupBox>

                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Grid Grid.Column="1" Margin="10">
                <ListView x:Name="ProductsListView"
                      ItemsSource="{Binding ProductsView}"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      BorderThickness="0"
                      Background="Transparent">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Margin" Value="0,0,0,12"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="ProductBorder"
                                    Background="White"
                                    CornerRadius="8"
                                    BorderThickness="2"
                                    BorderBrush="Transparent"
                                    Padding="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="{Binding Name}" FontSize="20" FontWeight="Bold" 
                                       Foreground="#333333" TextWrapping="Wrap"/>

                                    <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding Price, StringFormat='{}{0:N0}'}" 
                                       FontSize="22" FontWeight="Bold" Foreground="#333333" 
                                       HorizontalAlignment="Right" VerticalAlignment="Top"/>

                                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,2,0,0">
                                        <materialDesign:PackIcon Kind="Star" Width="14" Height="14" 
                                                 Foreground="#FFD700" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding Rating, StringFormat='{}{0:F1} рейтинг'}" FontSize="13" Foreground="#555555" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="{Binding Category.Name}" 
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="#333333" 
                                       Margin="0,10,0,5"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="{Binding Description}" 
                                       FontSize="14" Foreground="#666666" 
                                       TextWrapping="Wrap" MaxHeight="45" 
                                       TextTrimming="CharacterEllipsis" 
                                       Margin="0,5,40,0"
                                       VerticalAlignment="Top"/>

                                    <TextBlock Grid.Row="3" Grid.Column="1" 
                                       Text="{Binding Stock, StringFormat='Остаток: {0}'}" 
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="#888888" 
                                       HorizontalAlignment="Right" 
                                       VerticalAlignment="Top"
                                       Margin="0,5,0,0"/>

                                    <ItemsControl Grid.Row="4" Grid.Column="0" ItemsSource="{Binding Tags}" Margin="0,15,0,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel HorizontalAlignment="Left"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name, StringFormat='#{0}'}" FontSize="12" Foreground="#999999" Margin="0,0,10,0"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <StackPanel Grid.Row="4" Grid.Column="1" 
                                        Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                        Visibility="{Binding DataContext.IsManager, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Button Content="Изменить" 
                                            Tag="{Binding Id}"
                                            Click="EditProductBtn_Click"
                                            FontSize="10" Height="24" Padding="8,0" Margin="0,0,5,0"
                                            Style="{StaticResource MaterialDesignFlatButton}"/>
                                        <Button Content="Удалить" 
                                            Tag="{Binding Id}"
                                            Click="DeleteProductBtn_Click"
                                            FontSize="10" Height="24" Padding="8,0"
                                            Foreground="#FF4444"
                                            Style="{StaticResource MaterialDesignFlatButton}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                    <Setter TargetName="ProductBorder" Property="BorderBrush" Value="{StaticResource LowStockBorder}"/>
                                    <Setter TargetName="ProductBorder" Property="Background" Value="#FFF9F9"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>

        <Border Grid.Row="3" Background="{StaticResource PrimaryAccent}" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="TotalCountText" Foreground="White" FontSize="14"/>
                <TextBlock x:Name="FilteredCountText" Foreground="White" FontSize="14" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>